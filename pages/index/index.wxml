<!--index.wxml-->

<loading wx:if="{{ loading }}">
    加载中...
</loading>

<view class="login_view" wx:if="{{ login_bg }}">
  <view class="login_bg"></view>
  <button class="login_btn" open-type="getUserInfo" bindgetuserinfo="getUserInfo">微信授权</button>
</view>

<view class="header">
  <view>
    <view class="date">{{ date }}</view>
    <view class="today">Today</view>
  </view>
  <view class="user_img">
      <image src="{{ userInfo.avatarUrl }}"></image>
  </view>
</view>

<view class="plan_div">
  <view class="plan {{ item.bg }}" wx:for="{{ plan }}" wx:key="idx" bindtouchstart="plan_touch" bindtouchmove="plan_more">
    <view class="mb">
      <view class="plan_text">{{ item.text }}</view>
      <view class="plan_create_time">{{ item.create_time }}</view>
    </view>
  </view>
</view>
<view class="d-flex ju-center add-plan">
  <view>+</view>
</view>