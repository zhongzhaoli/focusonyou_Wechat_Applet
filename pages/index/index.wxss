/**index.wxss**/

.login_view {
  width: 100%;
  height: 100%;
  background-color: #009fa2;
}

page {
  height: 100%;
}

.login_bg {
  width: 100%;
  background-image: url('http://focus.yuntunwj.com/audio/login_bg.jpg');
  height: 800rpx;
  background-size: cover;
  background-position: center;
}

.login_btn {
  width: calc(100% - 150rpx);
  position: absolute;
  bottom: 75rpx;
  left: 75rpx;
}

.loading_img_div {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
}

.user_view {
  padding: 5rpx 20rpx;
}

.no_message {
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  letter-spacing: 7rpx;
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
}

.user_img {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  overflow: hidden;
}

.user_img > image {
  width: 100%;
  height: 100%;
}

.userinfo-nickname {
  color: #000;
  line-height: 100rpx;
  padding-left: 20rpx;
}

.fixed_bottom{
  position: fixed;
  bottom: 0;
  width: 100%;
  background: white;
}

.user_view {
  display: flex;
}

.plan_div {
  min-height: calc(100% - 120rpx - 150rpx - 50rpx);
  padding: 50rpx;
  padding-top: 0rpx;
}

.index_bottom_btn_div {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 150rpx;
  width: calc(100% - 2rem);
  padding: 0 1rem;
}

.index_bottom_btn_div button {
  font-size: 32rpx;
}

.plan {
  width: 100%;
  height: 200rpx;
  border-radius: 20rpx;
  margin-top: 40rpx;
  box-shadow: 5px 5px 20px rgba(0, 0, 0, 0.4);
  transition: all 0.3s;
  position: relative;
  left: 0;
  top: 0;
}

.mb {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.1);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  padding: 0 50rpx;
  padding-bottom: 20rpx;
  height: 100rpx;
}

.date {
  font-size: 25rpx;
  color: #777;
}

.today {
  font-size: 50rpx;
  font-weight: bold;
}

.plan_text {
  color: white;
  letter-spacing: 7rpx;
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 5;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.plan_create_time {
  position: absolute;
  bottom: 30rpx;
  left: 30rpx;
  color: rgba(255, 255, 255, 0.7);
  font-size: 25rpx;
  font-weight: 400;
  letter-spacing: 3rpx;
}

.bg1 {
  background-image: url('http://focus.yuntunwj.com/audio/dj1.jpg');
  background-size: cover;
}

.bg2 {
  background-image: url('http://focus.yuntunwj.com/audio/dj2.jpg');
  background-size: cover;
}

.bg3 {
  background-image: url('http://focus.yuntunwj.com/audio/dj3.jpg');
  background-size: cover;
}

.bg4 {
  background-image: url('http://focus.yuntunwj.com/audio/dj4.jpg');
  background-size: cover;
}

.ju-center {
  justify-content: center;
}

.ju-between{
  justify-content: space-between;
}

.ali-center{
  align-items: center;
}

.d-flex {
  display: flex;
}


.plans{
  width: calc(100% - 100rpx);
  padding: 50rpx 50rpx;
  margin-top: 20rpx;
  border-radius: 5px;
  background: #f8f9fa;
}
.plan_title{
  color:black;
  font-size: 30rpx;
  font-weight: 400;
  text-align: left;
}
.plans image{
  width: 60rpx;
  height: 60rpx;
}
.start_time{
  font-weight: 400;
  padding-top: 15rpx;
  color: #777;
  font-size: 25rpx;
  text-align: left;
}