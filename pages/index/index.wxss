/**index.wxss**/
.login_view{
  width: 100%;
  height: 100%;
  background-color: #009fa2;
}
page{
  height: 100%;
}
.login_bg{
  width: 100%;
  background-image: url('http://focus.yuntunwj.com/audio/login_bg.jpg');
  height :800rpx;
  background-size: cover;
  background-position: center;
}
.login_btn{
  width: calc(100% - 150rpx);
  position: absolute;
  bottom: 75rpx;
  left: 75rpx;
}
.loading_img_div{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.4);
  position: absolute;
  top:0;
  left:0;
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
}
.user_view{
  padding: 5rpx 20rpx;
}
.user_img{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  overflow: hidden;
}
.user_img > image{
  width: 100%;
  height: 100%;
}

.userinfo-nickname{
  color:#000;
  line-height: 100rpx;
  padding-left : 20rpx;
}
.user_view{
  display: flex;
}
.plan_div{
  padding: 50rpx;
  padding-top: 0rpx;
}
.plan{
  width: 100%;
  height: 600rpx;
  border-radius: 20rpx;
  margin-top: 40rpx;
  box-shadow: 5px 5px 20px rgba(0, 0, 0, 0.4);
  transition: all .3s;
  position: relative;
  left: 0;
  top: 0;
}
.plan:active{
  transform: scale(0.9);
}
.mb{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background: rgba(0,0,0,0.1);
  border-radius: 20rpx;
}

.header{
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  padding: 0 50rpx;
}

.date{
  font-size: 25rpx;
  color: #777;
}
.today{
  font-size: 50rpx;
  font-weight: bold;
}
.plan_text{
  padding: 40rpx;
  color: white;
  letter-spacing: 7rpx;
  font-size: 40rpx;
  line-height: 70rpx;
  font-weight: bold;
  text-align: center;
}
.plan_create_time{
  position: absolute;
  bottom: 30rpx;
  left: 30rpx;
  color: rgba(255,255,255,0.7);
  font-size: 25rpx;
  font-weight: 400;
  letter-spacing: 3rpx;
}

.bg1{
  background-image: url('http://focus.yuntunwj.com/audio/dj1.jpg');
  background-size: cover;
}
.bg2{
  background-image: url('http://focus.yuntunwj.com/audio/dj2.jpg');
  background-size: cover;
}
.bg3{
  background-image: url('http://focus.yuntunwj.com/audio/dj3.jpg');
  background-size: cover;
}
.bg4{
  background-image: url('http://focus.yuntunwj.com/audio/dj4.jpg');
  background-size: cover;
}
.ju-center{
  justify-content: center;
}
.d-flex{
  display: flex;
}
.add-plan{
  position: fixed;
  right: 20rpx;
  bottom: 20rpx;
  height: 100rpx;
  width: 100rpx;
  background: pink;
  color: white;
  border-radius: 50%;
  font-size: 60rpx;
  line-height: 90rpx;
}